@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div>
    <img src="~/assets/img/9.png" style="width: 100%;z-index: -100;position: fixed;transform: scale(1.10);filter: blur(58px) brightness(20%) saturate(133%);">
</div>
        <div style="margin: 0px;padding: 0px;padding-top: 140px;">
            <div class="row justify-content-center" style="margin: -1px;">
                <form id="account" method="post">

                    <div style="transition: all 1s;padding: 21px;background: #232323;border-radius: 7px;margin-top: 20px;margin: 6px;max-width: 572px;width: 100%;">
                        <p id="NavText-14" class="col" style="color: rgb(255,255,255);font-size: 21px;margin-top: 9px;padding-right: 2px;padding-left: 2PX;font-family: 'Inter Bold';max-width: 100%;text-align: center;margin-bottom: 14px;">Login</p>
                        <label style="color: rgb(255,255,255);">Email</label>
                        <input asp-for="Input.Email" type="text" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" placeholder="Email">
                        <label style="color: rgb(255,255,255);margin-top: 9px;">Password</label>
                        <input asp-for="Input.Password" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" placeholder="Password">
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-secondary" type="button" style="background: rgb(55,55,55);color: rgb(159,159,159);border-color: rgb(59,59,59);margin-top: 20px;">Login</button>
                            <div class="form-check" style="text-align: right;width: 140px;margin-left: auto;margin-top: -28px;margin-bottom: 20px;">
                                <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="formCheck-1">
                                <label asp-for="Input.RememberMe" class="form-check-label" for="formCheck-1" style="color: rgb(156,156,156);">Remember Me?</label>
                                
                            </div>

                            <div class="help-block text-danger" style="margin-left: -40px;margin-top: 28px;" asp-validation-summary="All"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}