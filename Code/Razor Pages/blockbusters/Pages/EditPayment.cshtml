@page
@model blockbusters.Pages.EditPaymentModel

@{
    ViewData["Title"] = "Edit";
}
<div><img src="~/assets/img/9.png" style="width: 100%;z-index: -100;position: fixed;transform: scale(1.10);filter: blur(58px) brightness(20%) saturate(133%);"></div>
        <div style="margin: 0px;padding: 0px;padding-top: 140px;">
            <div class="row justify-content-center" style="margin: -1px;">
                <form method="post">

                    <div style="transition: all 1s;padding: 21px;background: #232323;border-radius: 7px;margin-top: 20px;margin: 6px;max-width: 572px;width: 100%;">
                        <p id="NavText-14" class="col" style="color: rgb(255,255,255);font-size: 21px;margin-top: 9px;padding-right: 2px;padding-left: 2PX;font-family: 'Inter Bold';max-width: 100%;text-align: center;margin-bottom: 14px;">Modify Payment</p>
                        <input type="hidden" asp-for="Payment.PaymentID" />
                        <label style="color: rgb(255,255,255);">Cardholder Name</label>
                        <input asp-for="Payment.CardholderName" type="text" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" >

                           <label style="color: rgb(255,255,255);padding-top: 10px;">Card Number</label>
                        <input asp-for="Payment.CardNumber" type="text" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" >

                        <label style="color: rgb(255,255,255);padding-top: 10px;">Expiration Date</label>
                        <input asp-for="Payment.ExpirationDate" type="text" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" >

                        <label style="color: rgb(255,255,255);padding-top: 10px;">CCV</label>
                        <input asp-for="Payment.CCV" type="text" style="width: 100%;border-radius: 5px;border-width: 0px;height: 50px;padding-right: 16px;padding-left: 16px;background: rgb(81,81,81);color: rgb(255,255,255);" >

                        <div class="text-center">
                            <button value="Save" type="submit" class="btn btn-primary btn-secondary" type="button" style="background: rgb(55,55,55);color: rgb(159,159,159);border-color: rgb(59,59,59);margin-top: 20px;">Apply Changes</button>
                            <div class="help-block text-danger" style="margin-left: -40px;margin-top: 28px;" asp-validation-summary="All"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
