@page
@model blockbusters.Pages.Payments.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].CardholderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment[0].CCV)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Payment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardholderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCV)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PaymentID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PaymentID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PaymentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
