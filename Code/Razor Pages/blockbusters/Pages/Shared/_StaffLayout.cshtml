<body>
    <header>
    <nav class="navbar navbar-light navbar-expand-md fixed-top" style="padding: 0px;height: 72px;z-index: 50;background: linear-gradient(rgba(0,0,0,0.75) 3%, rgba(255,255,255,0));background: black;border-bottom: 1px solid #a7a7a7;">
        <div class="container-fluid d-flex justify-content-between">
            <div class="d-flex justify-content-start" style="width: 15%;height: 72px;">
                <a id="NavButtons" asp-page="/Index" style="color: rgb(255,255,255);margin: auto;padding: 0px;margin-left: 15px;"><img class="logo" src="/images/logofinal.svg" href="index.html"></a></div>
            <div style="width: 70%;height: 72px;position: relative;text-align: center;">
                <div class="d-flex justify-content-center" style="position: absolute;top: 0;left: 0;width: 100%;margin-top: 19px;">
                    <a id="NavButtons" class="Nav-People" asp-page="/People/Index">
                        <i class="material-icons col" id="NavIcon" style="padding: 0px;margin: auto;margin-top: 4px;width: 24px;">people</i>
                        <p id="NavText" class="col">People</p>
                    </a>
                    <a id="NavButtons" class="row Nav-Movies" asp-page="/Movies/Index" style="height: 28px;text-align: center;">
                        <i class="material-icons col" id="NavIcon" style="padding: 0px;margin: auto;margin-top: 4px;width: 24px;">local_movies</i>
                        <p id="NavText" class="col">Movies</p>
                    </a>
                    <a id="NavButtons" class="row Nav-Orders" asp-page="/Orders/Index">
                        <i class="material-icons col" id="NavIcon" style="padding: 0px;margin: auto;margin-top: 4px;width: 24px;">shopping_basket</i>
                        <p id="NavText" class="col">Orders</p>
                    </a>
                    <a id="NavButtons" class="row Nav-Reviews" asp-page="/PeopleReviews/Index">
                        <i class="material-icons col" id="NavIcon" style="padding: 0px;margin: auto;margin-top: 4px;width: 24px;">rate_review</i>
                        <p id="NavText" class="col">Reviews</p>
                    </a>
                    </div>
            </div>
            <div class="d-flex justify-content-end" style="width: 15%;height: 72px;">
                <div class="dropdown" style="padding: 0px;margin: auto;margin-right: 15px;border-radius: 7px;"><button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: 0px;/*margin: auto;*//*margin-right: 15px;*//*border-radius: 7px;*/height: 35px;width: 35px;background: rgb(54,54,54);border-color: rgb(81,81,81);z-index: 113;"><i class="material-icons" style="padding-top: 4px;">person</i></button>
                    <div class="dropdown-menu" style="margin-left: -124px;margin-top: 8px;background: rgb(40,40,40);border: 1px solid rgba(50,50,50,0.67)!important;">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </nav>
