@page
@model blockbusters.Pages.PeopleReviews.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>PersonReview</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PersonReview.PersonReviewID" />
            <div class="form-group">
                <label asp-for="PersonReview.MovieID" class="control-label"></label>
                <select asp-for="PersonReview.MovieID" class="form-control" asp-items="ViewBag.MovieID"></select>
                <span asp-validation-for="PersonReview.MovieID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonReview.PersonID" class="control-label"></label>
                <select asp-for="PersonReview.PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
                <span asp-validation-for="PersonReview.PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonReview.ReviewDate" class="control-label"></label>
                <input asp-for="PersonReview.ReviewDate" class="form-control" />
                <span asp-validation-for="PersonReview.ReviewDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonReview.ReviewText" class="control-label"></label>
                <input asp-for="PersonReview.ReviewText" class="form-control" />
                <span asp-validation-for="PersonReview.ReviewText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonReview.Likes" class="control-label"></label>
                <input asp-for="PersonReview.Likes" class="form-control" />
                <span asp-validation-for="PersonReview.Likes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
